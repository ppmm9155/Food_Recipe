<?xml version="1.0" encoding="utf-8"?>
<!-- [추가] '내 냉장고 재료 불러오기' 바텀 시트의 전체 레이아웃 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 헤더 영역: 타이틀과 '전체 선택' 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/pantry_import_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 냉장고 재료"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pantry_import_btn_select_all"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 선택"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 재료 목록을 보여줄 RecyclerView -->
    <!-- layout_weight="1"과 height="0dp"를 사용하여 남는 공간을 모두 차지하도록 설정 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pantry_import_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_pantry_import"
        tools:itemCount="10"/>

    <!-- 하단 '선택 완료' 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pantry_import_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="선택 완료 (0)" />

</LinearLayout>