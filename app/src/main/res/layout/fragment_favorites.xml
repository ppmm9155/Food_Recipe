<?xml version="1.0" encoding="utf-8"?>
<!-- [변경] ProgressBar를 화면 중앙에 표시하기 위해 최상위 레이아웃을 FrameLayout으로 변경합니다. -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 기존 ConstraintLayout은 FrameLayout의 자식으로 들어갑니다. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 검색창 (기존 유지) -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/favorites_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryHint="음식 이름 입력"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 레시피 리스트 (기존 유지) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavorites"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/favorites_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 즐겨찾기 목록 없음 안내 문구 (기존 유지) -->
        <TextView
            android:id="@+id/favorites_tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기한 레시피가 없습니다."
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/favorites_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- [추가] 로딩 상태를 표시할 ProgressBar를 추가합니다. -->
    <!-- FrameLayout의 자식으로 추가하고 layout_gravity="center"를 설정하여 화면 중앙에 위치시킵니다. -->
    <ProgressBar
        android:id="@+id/favorites_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>
