<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pantry_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantry.PantryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pantry_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        android:visibility="gone"
        tools:listitem="@layout/list_item_pantry"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/pantry_empty_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="visible"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/pantry_iv_empty_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_pantry_empty"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/pantry_tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="냉장고가 비어있어요.\n아래 버튼으로 첫 재료를 추가해보세요!\n\n(추가된 재료는 옆으로 밀어서 삭제할 수 있어요.)"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"/>
    </LinearLayout>

    <!-- [추가] 데이터 로딩 중에 표시될 ProgressBar 입니다. -->
    <ProgressBar
        android:id="@+id/pantry_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pantry_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="재료 추가"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/black_2"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
